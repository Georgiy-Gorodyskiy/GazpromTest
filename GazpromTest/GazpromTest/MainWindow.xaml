<Window x:Class="GazpromTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GazpromTest" xmlns:views="clr-namespace:GazpromTest.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "52"></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        <views:MenuGrid Grid.Row="0" x:Name="MenuGrid"></views:MenuGrid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="300"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <views:TableGrid Grid.Column="0" x:Name="TableGrid"></views:TableGrid>
            <views:ElementInfoGrid Grid.Column="1" x:Name="ElementInfoGrid"></views:ElementInfoGrid>
        </Grid>
    </Grid>
</Window>
